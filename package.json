{
  "private": true,
  "author": {
    "name": "Luke Edwards",
    "email": "luke@lukeed.com",
    "url": "https://lukeed.com"
  },
  "scripts": {
    "prepack": "npm run build",
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna exec bundt index.mjs",
    "lint": "eslint packages --env node,es6",
    "pretest": "npm run lint && npm run bootstrap",
    "test": "tape -r esm packages/*/test/*.js | tap-spec"
  },
  "devDependencies": {
    "bundt": "0.4.0",
    "eslint": "5.15.0",
    "esm": "3.2.22",
    "httpie": "1.1.0",
    "lerna": "3.13.4",
    "tap-spec": "5.0.0",
    "tape": "4.10.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": [
          "packages/*/test/**/*.js"
        ],
        "rules": {
          "no-console": 0
        }
      }
    ]
  },
  "eslintIgnore": [
    "**/node_modules/**"
  ]
}
